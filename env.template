# 개-사주 서비스 환경변수 설정 템플릿
# 이 파일을 .env.local로 복사하여 실제 값으로 변경해주세요

# ===========================================
# AI 공급자 설정
# ===========================================

# 기본 AI 공급자 ('openai', 'google', 'auto')
AI_DEFAULT_PROVIDER=google

# 폴백 AI 공급자 (선택사항)
AI_FALLBACK_PROVIDER=openai

# 폴백 활성화 여부
AI_ENABLE_FALLBACK=true

# ===========================================
# API 키 설정 (최소 하나는 필수)
# ===========================================

# OpenAI API 키
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google AI API 키
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# ===========================================
# 모델 설정
# ===========================================

# OpenAI 모델
OPENAI_MODEL=gpt-4o-mini

# Google AI 모델
GOOGLE_AI_MODEL=gemini-1.5-flash

# ===========================================
# 토큰 및 성능 설정
# ===========================================

# 최대 토큰 수
OPENAI_MAX_TOKENS=2000
GOOGLE_AI_MAX_TOKENS=2000

# 창의성 수준 (0.0 - 1.0)
OPENAI_TEMPERATURE=0.7
GOOGLE_AI_TEMPERATURE=0.7

# 타임아웃 (밀리초)
OPENAI_TIMEOUT=30000
GOOGLE_AI_TIMEOUT=30000

# 재시도 횟수
OPENAI_RETRIES=3
GOOGLE_AI_RETRIES=3

# ===========================================
# AI 기능 설정
# ===========================================

# 고도화된 프롬프트 시스템 사용
AI_ENABLE_ADVANCED_PROMPTS=true

# 품질 검사 활성화
AI_ENABLE_QUALITY_CHECK=true

# 응답 캐싱 활성화
AI_ENABLE_CACHING=true

# 사용량 분석 활성화
AI_ENABLE_ANALYTICS=true

# 디버그 모드 (개발환경에서만 사용)
AI_DEBUG_MODE=false

# ===========================================
# 제한 설정
# ===========================================

# 시간당 최대 요청 수
AI_MAX_REQUESTS_PER_HOUR=100

# 요청당 최대 토큰 수
AI_MAX_TOKENS_PER_REQUEST=4000

# 캐시 만료 시간 (시간)
AI_CACHE_EXPIRY_HOURS=24

# ===========================================
# 고급 기능 설정 (선택사항)
# ===========================================

# 로드 밸런싱 활성화
AI_ENABLE_LOAD_BALANCING=true

# 로드 밸런싱 전략 ('round-robin', 'least-used', 'fastest-response')
AI_LOAD_BALANCING_STRATEGY=fastest-response

# 서킷 브레이커 활성화
AI_ENABLE_CIRCUIT_BREAKER=true

# 서킷 브레이커 임계치 (연속 실패 횟수)
AI_CIRCUIT_BREAKER_THRESHOLD=5

# 헬스 체크 활성화
AI_ENABLE_HEALTH_CHECK=true

# 헬스 체크 간격 (밀리초)
AI_HEALTH_CHECK_INTERVAL=60000

# ===========================================
# 데이터베이스 설정 (필요시)
# ===========================================

# Vercel KV (선택사항)
KV_URL=your-vercel-kv-url
KV_REST_API_URL=your-vercel-kv-rest-url
KV_REST_API_TOKEN=your-vercel-kv-token
KV_REST_API_READ_ONLY_TOKEN=your-vercel-kv-readonly-token

# ===========================================
# 분석 도구 설정
# ===========================================

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# ===========================================
# 환경별 설정 예시
# ===========================================

# 개발 환경 추천 설정:
# AI_DEFAULT_PROVIDER=google (무료 할당량 활용)
# AI_DEBUG_MODE=true
# AI_MAX_REQUESTS_PER_HOUR=50

# 프로덕션 환경 추천 설정:
# AI_DEFAULT_PROVIDER=openai (안정성 우선)
# AI_ENABLE_FALLBACK=true
# AI_ENABLE_CIRCUIT_BREAKER=true
# AI_DEBUG_MODE=false

# 테스트 환경 추천 설정:
# AI_DEFAULT_PROVIDER=auto
# AI_ENABLE_CACHING=false
# AI_MAX_REQUESTS_PER_HOUR=20
